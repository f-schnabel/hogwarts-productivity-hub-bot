{% extends "layout.twig" %}

{% block styles %}
<style>
  :root {
    --frame-dark: #9a6b35;
    --frame-mid: #bb8040;
    --frame-light: #d49545;
    --frame-highlight: #e8a84d;
  }

  /* Section Headers */
  .section-title {
    font-family: 'Cinzel', serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Hourglass Container */
  .hourglasses-container {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 2rem;
    padding: 2rem 1rem 2rem;
    min-height: 520px;
  }

  /* Individual Hourglass Wrapper */
  .hourglass-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    animation: fadeSlideUp 0.6s ease-out both;
  }

  .hourglass-wrapper:nth-child(1) { animation-delay: 0.1s; }
  .hourglass-wrapper:nth-child(2) { animation-delay: 0.2s; }
  .hourglass-wrapper:nth-child(3) { animation-delay: 0.3s; }
  .hourglass-wrapper:nth-child(4) { animation-delay: 0.4s; }

  /* Ranking Badge */
  .rank-badge {
    font-family: 'Cinzel', serif;
    font-size: 1.1rem;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    background: linear-gradient(135deg, rgba(20, 20, 35, 0.9) 0%, rgba(30, 30, 50, 0.9) 100%);
    border: 2px solid var(--border-subtle);
    position: relative;
    transition: all 0.3s ease;
  }

  .rank-1 {
    color: #ffd700;
    border-color: rgba(255, 215, 0, 0.5);
    box-shadow: 0 0 25px rgba(255, 215, 0, 0.4), inset 0 0 20px rgba(255, 215, 0, 0.1);
    text-shadow: 0 0 15px rgba(255, 215, 0, 0.7);
  }

  .rank-2 {
    color: #e8e8e8;
    border-color: rgba(232, 232, 232, 0.4);
    box-shadow: 0 0 20px rgba(232, 232, 232, 0.25);
    text-shadow: 0 0 12px rgba(232, 232, 232, 0.5);
  }

  .rank-3 {
    color: #cd7f32;
    border-color: rgba(205, 127, 50, 0.4);
    box-shadow: 0 0 20px rgba(205, 127, 50, 0.3);
    text-shadow: 0 0 12px rgba(205, 127, 50, 0.5);
  }

  .rank-4 {
    color: var(--text-muted);
    border-color: var(--border-subtle);
  }

  /* Hourglass Container with Overlay */
  .hourglass-container {
    position: relative;
  }

  /* Hourglass Frame */
  .hourglass {
    position: relative;
    width: 120px;
    height: 420px;
  }

  /* Ornate top and bottom caps */
  .hourglass-cap {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 130px;
    height: 20px;
    background: linear-gradient(180deg,
      var(--frame-dark) 0%,
      var(--frame-mid) 20%,
      var(--frame-light) 40%,
      var(--frame-highlight) 50%,
      var(--frame-light) 60%,
      var(--frame-mid) 80%,
      var(--frame-dark) 100%
    );
    border-radius: 4px;
    z-index: 10;
    box-shadow:
      0 3px 10px rgba(0, 0, 0, 0.6),
      inset 0 2px 0 rgba(255, 255, 255, 0.2),
      inset 0 -2px 0 rgba(0, 0, 0, 0.3);
  }

  .hourglass-cap::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, transparent 0%, rgba(255,215,0,0.25) 50%, transparent 100%);
    top: 50%;
    margin-top: -2px;
  }

  .hourglass-cap.top { top: 0; }
  .hourglass-cap.bottom { bottom: 0; }

  /* Central pillar connectors */
  .hourglass-pillar {
    position: absolute;
    width: 10px;
    height: 100%;
    background: linear-gradient(90deg,
      var(--frame-dark) 0%,
      var(--frame-mid) 30%,
      var(--frame-light) 50%,
      var(--frame-mid) 70%,
      var(--frame-dark) 100%
    );
    top: 0;
    z-index: 5;
    box-shadow: 2px 0 6px rgba(0, 0, 0, 0.4);
  }

  .hourglass-pillar.left { left: 8px; }
  .hourglass-pillar.right { right: 8px; }

  /* Glass bulb container */
  .hourglass-glass {
    position: absolute;
    top: 20px;
    bottom: 20px;
    left: 18px;
    right: 18px;
    overflow: hidden;
  }

  /* Upper and lower bulbs */
  .glass-bulb {
    position: absolute;
    left: 0;
    right: 0;
    background: rgba(10, 10, 18, 0.75);
    border: 2px solid rgba(255, 255, 255, 0.06);
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .glass-bulb.upper {
    top: 0;
    height: 22%;
    border-radius: 35px 35px 6px 6px;
    clip-path: polygon(
      0% 0%,
      100% 0%,
      100% 70%,
      65% 100%,
      35% 100%,
      0% 70%
    );
  }

  .glass-bulb.lower {
    bottom: 0;
    height: 72%;
    border-radius: 6px 6px 35px 35px;
    clip-path: polygon(
      35% 0%,
      65% 0%,
      100% 6%,
      100% 100%,
      0% 100%,
      0% 6%
    );
  }

  /* Glass shine effect */
  .glass-bulb::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 12px;
    width: 12px;
    height: 55%;
    background: linear-gradient(180deg, rgba(255,255,255,0.12) 0%, rgba(255,255,255,0.02) 100%);
    border-radius: 8px;
    z-index: 4;
  }

  /* Sand texture base - grainy noise */
  .sand-fill,
  .sand-fill-upper {
    background-image:
      url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    background-blend-mode: overlay;
  }

  /* Sand fill in upper bulb (depleting) */
  .sand-fill-upper {
    position: absolute;
    top: 4px;
    left: 4px;
    right: 4px;
    border-radius: 30px 30px 4px 4px;
    background-color: var(--house-color);
    transition: height 1.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow:
      inset 0 -6px 12px rgba(0, 0, 0, 0.3),
      inset 0 6px 12px rgba(255, 255, 255, 0.15);
  }

  /* Sand bottom surface (flat) */
  .sand-fill-upper::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 8px;
    background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.25) 100%);
  }

  /* Sand fill in lower bulb */
  .sand-fill {
    position: absolute;
    bottom: 4px;
    left: 4px;
    right: 4px;
    border-radius: 4px 4px 30px 30px;
    background-color: var(--house-color);
    transition: height 1.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow:
      inset 0 6px 14px rgba(255, 255, 255, 0.2),
      inset 0 -6px 14px rgba(0, 0, 0, 0.25),
      0 0 20px var(--house-color-fade);
  }

  /* Sand top surface (mounded) */
  .sand-fill::before {
    content: '';
    position: absolute;
    top: -4px;
    left: 10%;
    right: 10%;
    height: 10px;
    background: radial-gradient(ellipse 50% 100% at 50% 100%, var(--house-color-light) 0%, transparent 70%);
    border-radius: 50%;
  }

  /* Grain overlay for both */
  .sand-fill::after,
  .sand-fill-upper::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 20% 30%, rgba(255,255,255,0.3) 0.5px, transparent 0.5px),
      radial-gradient(circle at 60% 20%, rgba(255,255,255,0.25) 0.5px, transparent 0.5px),
      radial-gradient(circle at 80% 50%, rgba(255,255,255,0.2) 0.5px, transparent 0.5px),
      radial-gradient(circle at 40% 70%, rgba(255,255,255,0.25) 0.5px, transparent 0.5px),
      radial-gradient(circle at 15% 80%, rgba(255,255,255,0.2) 0.5px, transparent 0.5px),
      radial-gradient(circle at 70% 85%, rgba(255,255,255,0.22) 0.5px, transparent 0.5px),
      radial-gradient(circle at 90% 25%, rgba(255,255,255,0.18) 0.5px, transparent 0.5px),
      radial-gradient(circle at 30% 45%, rgba(0,0,0,0.15) 0.5px, transparent 0.5px),
      radial-gradient(circle at 55% 60%, rgba(0,0,0,0.12) 0.5px, transparent 0.5px),
      radial-gradient(circle at 85% 75%, rgba(0,0,0,0.1) 0.5px, transparent 0.5px);
    animation: shimmerGrain 4s ease-in-out infinite;
  }

  @keyframes shimmerGrain {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }

  /* Neck connector */
  .hourglass-neck {
    position: absolute;
    top: 25%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 24px;
    background: rgba(10, 10, 18, 0.85);
    border-left: 2px solid rgba(255, 255, 255, 0.05);
    border-right: 2px solid rgba(255, 255, 255, 0.05);
    z-index: 3;
  }

  .hourglass-neck::before,
  .hourglass-neck::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 34px;
    height: 8px;
    background: linear-gradient(180deg,
      var(--frame-dark) 0%,
      var(--frame-light) 50%,
      var(--frame-dark) 100%
    );
    border-radius: 2px;
  }

  .hourglass-neck::before { top: -4px; }
  .hourglass-neck::after { bottom: -4px; }

  /* House Info Overlay - positioned in lower half of hourglass */
  .house-overlay {
    position: absolute;
    bottom: 60px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
    text-align: center;
    pointer-events: none;
  }

  .house-crest {
    width: 3.5rem;
    height: 3.5rem;
    margin: 0 auto 1rem;
    filter: drop-shadow(0 2px 8px rgba(0,0,0,0.8));
    object-fit: contain;
    display: block;
  }

  .house-name-overlay {
    font-family: 'Cinzel', serif;
    font-size: 0.85rem;
    font-weight: 700;
    color: #fff;
    text-shadow:
      0 0 10px rgba(0,0,0,0.9),
      0 0 20px rgba(0,0,0,0.7),
      0 2px 4px rgba(0,0,0,0.9);
    letter-spacing: 0.05em;
  }

  .house-points-overlay {
    font-family: 'Outfit', sans-serif;
    font-size: 1.6rem;
    font-weight: 700;
    color: #fff;
    text-shadow:
      0 0 15px var(--house-color),
      0 0 30px var(--house-color-fade),
      0 2px 4px rgba(0,0,0,0.9);
    line-height: 1.1;
    margin-top: 0.15rem;
  }

  /* Bottom info */
  .house-info {
    text-align: center;
    min-width: 110px;
  }

  .house-members {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  /* Hover glow */
  .hourglass-wrapper:hover .glass-bulb {
    border-color: var(--house-color);
    box-shadow: inset 0 0 25px var(--house-color-fade);
  }

  .hourglass-wrapper:hover .sand-fill {
    box-shadow:
      inset 0 6px 14px rgba(255, 255, 255, 0.25),
      inset 0 -6px 14px rgba(0, 0, 0, 0.25),
      0 0 35px var(--house-color-fade);
  }

  .hourglass-wrapper:hover .house-points-overlay {
    text-shadow:
      0 0 20px var(--house-color),
      0 0 40px var(--house-color),
      0 2px 4px rgba(0,0,0,0.9);
  }

  /* Unweighted Section */
  .unweighted-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
  }

  .unweighted-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .unweighted-card {
    background: linear-gradient(135deg, rgba(20, 20, 35, 0.6) 0%, rgba(30, 30, 50, 0.5) 100%);
    border: 1px solid var(--border-subtle);
    border-radius: 14px;
    padding: 1.25rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .unweighted-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--house-color);
    opacity: 0.7;
  }

  .unweighted-card:hover {
    background: linear-gradient(135deg, rgba(30, 30, 50, 0.7) 0%, rgba(40, 40, 60, 0.6) 100%);
    border-color: var(--house-color);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3), 0 0 20px var(--house-color-fade);
  }

  .unweighted-card:hover::before {
    opacity: 1;
    box-shadow: 0 0 15px var(--house-color);
  }

  .unweighted-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, var(--house-color-light) 0%, var(--house-color) 60%, var(--house-color-dark) 100%);
    box-shadow: 0 0 12px var(--house-color-fade);
    flex-shrink: 0;
  }

  .unweighted-info {
    flex: 1;
  }

  .unweighted-name {
    font-family: 'Cinzel', serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .unweighted-details {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-top: 0.2rem;
  }

  .unweighted-points {
    font-family: 'Outfit', sans-serif;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  /* Footer */
  .footer-note {
    text-align: center;
    color: var(--text-muted);
    font-size: 0.8rem;
    margin-top: 2.5rem;
  }

  /* Responsive */
  @media (max-width: 700px) {
    .hourglasses-container {
      gap: 1rem;
      padding: 1.5rem 0.5rem 2rem;
    }

    .hourglass {
      width: 85px;
      height: 320px;
    }

    .house-overlay {
      bottom: 45px;
    }

    .hourglass-cap {
      width: 95px;
      height: 16px;
    }

    .hourglass-cap::before { width: 70px; height: 3px; }

    .hourglass-pillar { width: 7px; }
    .hourglass-pillar.left { left: 6px; }
    .hourglass-pillar.right { right: 6px; }

    .hourglass-glass {
      top: 16px;
      bottom: 16px;
      left: 13px;
      right: 13px;
    }

    .hourglass-neck { width: 16px; height: 20px; }
    .hourglass-neck::before, .hourglass-neck::after { width: 26px; height: 6px; }

    .house-crest { width: 2rem; height: 2rem; }
    .house-name-overlay { font-size: 0.7rem; }
    .house-points-overlay { font-size: 1.3rem; }
    .house-members { font-size: 0.7rem; }
    .rank-badge { font-size: 0.95rem; padding: 0.4rem 0.8rem; }

    .unweighted-grid { grid-template-columns: repeat(2, 1fr); }
    .unweighted-card { padding: 1rem; }
    .unweighted-name { font-size: 0.8rem; }
    .unweighted-points { font-size: 1.2rem; }
  }

  @media (max-width: 480px) {
    .hourglass {
      width: 65px;
      height: 260px;
    }

    .house-overlay {
      bottom: 35px;
    }

    .hourglass-cap { width: 75px; height: 14px; }
    .hourglass-pillar { width: 6px; }
    .hourglass-pillar.left { left: 4px; }
    .hourglass-pillar.right { right: 4px; }

    .hourglass-glass {
      top: 14px;
      bottom: 14px;
      left: 10px;
      right: 10px;
    }

    .hourglass-neck { width: 12px; height: 16px; }
    .hourglass-neck::before, .hourglass-neck::after { width: 20px; height: 5px; }

    .house-crest { width: 1.5rem; height: 1.5rem; }
    .house-name-overlay { font-size: 0.6rem; }
    .house-points-overlay { font-size: 1.1rem; }

    .hourglasses-container { gap: 0.5rem; }
    .rank-badge { font-size: 0.8rem; padding: 0.3rem 0.6rem; }
  }
</style>
{% endblock %}

{% block content %}
{# House crest images #}
{% set houseCrests = {
  'Gryffindor': '/assets/8854-gryffindor.png',
  'Hufflepuff': '/assets/5200-hufflepuff.png',
  'Ravenclaw': '/assets/3661-ravenclaw.png',
  'Slytherin': '/assets/8854-slytherin.png'
} %}

<h1>House Cup Standings</h1>

<p class="section-title">Weighted Points</p>

<div class="hourglasses-container">
  {% for house in houses %}
    {# Calculate fill percentage - max at 300 points #}
    {% set maxPointsBase = 300 %}
    {% set lowerFillPercent = ((house.points / maxPointsBase) * 100) %}
    {% set lowerFillPercent = lowerFillPercent > 100 ? 100 : lowerFillPercent %}
    {% set lowerFillPercent = lowerFillPercent < 10 and house.points > 0 ? 10 : lowerFillPercent %}

    {# Overflow into upper bulb if > 300 points #}
    {% set overflowPoints = house.points > maxPointsBase ? house.points - maxPointsBase : 0 %}
    {% set upperFillPercent = overflowPoints > 0 ? ((overflowPoints / maxPointsBase) * 100) : 25 %}
    {% set upperFillPercent = upperFillPercent > 100 ? 100 : upperFillPercent %}

    {# Determine rank class #}
    {% set rankClass = 'rank-' ~ loop.index %}

    {# Generate color variants #}
    {% set houseColorLight = house.color ~ 'dd' %}
    {% set houseColorDark = house.color ~ '88' %}
    {% set houseColorFade = house.color ~ '50' %}

    <div class="hourglass-wrapper" style="
      --house-color: {{ house.color }};
      --house-color-light: {{ houseColorLight }};
      --house-color-dark: {{ houseColorDark }};
      --house-color-fade: {{ houseColorFade }};
    ">
      <div class="rank-badge {{ rankClass }}">
        {% if loop.index == 1 %}1st
        {% elseif loop.index == 2 %}2nd
        {% elseif loop.index == 3 %}3rd
        {% else %}4th{% endif %}
      </div>

      <div class="hourglass-container">
        <div class="hourglass">
          <div class="hourglass-cap top"></div>
          <div class="hourglass-cap bottom"></div>
          <div class="hourglass-pillar left"></div>
          <div class="hourglass-pillar right"></div>

          <div class="hourglass-glass">
            <div class="glass-bulb upper">
              <div class="sand-fill-upper" style="height: {{ upperFillPercent }}%;"></div>
            </div>
            <div class="glass-bulb lower">
              <div class="sand-fill" style="height: {{ lowerFillPercent }}%;"></div>
            </div>
            <div class="hourglass-neck"></div>
          </div>
        </div>

        <!-- Overlay: Crest + Name + Points -->
        <div class="house-overlay">
          <img class="house-crest" src="{{ houseCrests[house.name] }}" alt="{{ house.name }}">
          {# <div class="house-name-overlay">{{ house.name }}</div> #}
          <div class="house-points-overlay">{{ house.points|number_format }}</div>
        </div>
      </div>

      <div class="house-info">
        <div class="house-members">{{ house.memberCount }} qualifying</div>
      </div>
    </div>
  {% endfor %}
</div>

<div class="unweighted-section">
  <p class="section-title">Total Points (Unweighted)</p>

  <div class="unweighted-grid">
    {% for house in houses %}
      <div class="unweighted-card" style="
        --house-color: {{ house.color }};
        --house-color-light: {{ house.color }}dd;
        --house-color-dark: {{ house.color }}88;
        --house-color-fade: {{ house.color }}40;
      ">
        <div class="unweighted-dot"></div>
        <div class="unweighted-info">
          <div class="unweighted-name">{{ house.name }}</div>
          <div class="unweighted-details">{{ house.totalMemberCount }} members</div>
        </div>
        <div class="unweighted-points">{{ house.unweightedPoints|number_format }}</div>
      </div>
    {% endfor %}
  </div>
</div>

<p class="footer-note">Monthly points Â· Resets at the start of each month</p>
{% endblock %}
