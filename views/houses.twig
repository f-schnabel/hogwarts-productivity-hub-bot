{% extends "layout.twig" %}

{% block styles %}
<style>
  :root {
    --frame-dark: #9a6b35;
    --frame-mid: #bb8040;
    --frame-light: #d49545;
    --frame-highlight: #e8a84d;
  }

  /* Mystery Mode - Last 3 days of month */
  .mystery-mode .rank-badge,
  .mystery-mode .house-points-overlay {
    display: none;
  }

  /* Black out the sand completely */
  .mystery-mode .sand-fill,
  .mystery-mode .sand-fill-upper {
    background: #0a0a12 !important;
    background-image: none !important;
    box-shadow: none !important;
  }

  .mystery-mode .sand-fill::before,
  .mystery-mode .sand-fill::after,
  .mystery-mode .sand-fill-upper::before,
  .mystery-mode .sand-fill-upper::after {
    display: none;
  }

  /* Make glass bulbs darker and mysterious */
  .mystery-mode .glass-bulb {
    background: rgba(5, 5, 10, 0.9);
    border-color: rgba(100, 80, 150, 0.3);
  }

  /* Mysterious smoke/mist effect inside glass */
  .mystery-mode .glass-bulb::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(ellipse at 30% 20%, rgba(160, 120, 220, 0.7) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 70%, rgba(120, 160, 220, 0.6) 0%, transparent 45%),
      radial-gradient(ellipse at 50% 45%, rgba(100, 80, 180, 0.5) 0%, transparent 55%);
    animation: mysterySmoke 6s ease-in-out infinite;
    pointer-events: none;
    z-index: 20;
    border-radius: inherit;
  }

  .mystery-mode .glass-bulb.lower::after {
    background:
      radial-gradient(ellipse at 60% 30%, rgba(180, 100, 240, 0.65) 0%, transparent 50%),
      radial-gradient(ellipse at 25% 60%, rgba(100, 180, 240, 0.55) 0%, transparent 45%),
      radial-gradient(ellipse at 50% 80%, rgba(140, 100, 200, 0.5) 0%, transparent 50%);
    animation: mysterySmokeAlt 7s ease-in-out infinite;
  }

  /* Stagger animations per hourglass via CSS custom properties */
  .hourglass-wrapper:nth-child(1) { --smoke-delay: 0s; --smoke-lower-delay: -1.5s; --glow-delay: 0s; --pulse-delay: -0.5s; }
  .hourglass-wrapper:nth-child(2) { --smoke-delay: -2s; --smoke-lower-delay: -4s; --glow-delay: -1.2s; --pulse-delay: -2s; }
  .hourglass-wrapper:nth-child(3) { --smoke-delay: -3.5s; --smoke-lower-delay: -1s; --glow-delay: -2.8s; --pulse-delay: -3s; }
  .hourglass-wrapper:nth-child(4) { --smoke-delay: -5s; --smoke-lower-delay: -2.5s; --glow-delay: -4s; --pulse-delay: -1s; }

  .mystery-mode .glass-bulb::after { animation-delay: var(--smoke-delay); }
  .mystery-mode .glass-bulb.lower::after { animation-delay: var(--smoke-lower-delay); }

  /* Ethereal glow around hourglass */
  .mystery-mode .hourglass-container::before {
    content: '';
    position: absolute;
    inset: -30px;
    background: radial-gradient(ellipse at 50% 50%, rgba(130, 80, 180, 0.4) 0%, transparent 70%);
    animation: mysteryGlow 5s ease-in-out infinite;
    pointer-events: none;
    z-index: -1;
    filter: blur(20px);
  }

  .mystery-mode .hourglass-container::before { animation-delay: var(--glow-delay); }

  /* Subtle pulsing on the whole hourglass */
  .mystery-mode .hourglass { animation: mysteryPulse 4s ease-in-out infinite; animation-delay: var(--pulse-delay); }

  /* Rising bubbles - use dedicated elements */
  .mystery-bubbles {
    display: none;
  }

  .mystery-mode .mystery-bubbles {
    display: block;
    position: absolute;
    inset: 4px;
    overflow: hidden;
    pointer-events: none;
    z-index: 25;
    border-radius: inherit;
  }

  .mystery-mode .mystery-bubbles span {
    position: absolute;
    width: 4px;
    height: 4px;
    background: radial-gradient(circle, rgba(180, 150, 255, 0.9) 0%, rgba(150, 180, 255, 0.6) 50%, transparent 70%);
    border-radius: 50%;
    box-shadow: 0 0 6px rgba(160, 140, 255, 0.8);
  }
  /* Bubble base positions and sizes */
  .mystery-mode .mystery-bubbles span:nth-child(1) { left: 15%; width: 3px; height: 3px; animation-duration: 4s; }
  .mystery-mode .mystery-bubbles span:nth-child(2) { left: 35%; width: 5px; height: 5px; animation-duration: 5s; }
  .mystery-mode .mystery-bubbles span:nth-child(3) { left: 55%; width: 3px; height: 3px; animation-duration: 4.5s; }
  .mystery-mode .mystery-bubbles span:nth-child(4) { left: 75%; width: 4px; height: 4px; animation-duration: 5.5s; }
  .mystery-mode .mystery-bubbles span:nth-child(5) { left: 25%; width: 2px; height: 2px; animation-duration: 3.5s; }
  .mystery-mode .mystery-bubbles span:nth-child(6) { left: 65%; width: 3px; height: 3px; animation-duration: 4.2s; }

  /* Bubble delays via CSS custom properties per hourglass */
  .hourglass-wrapper:nth-child(1) { --b1: 0s; --b2: -1s; --b3: -2s; --b4: -0.5s; --b5: -3s; --b6: -1.5s; }
  .hourglass-wrapper:nth-child(2) { --b1: -0.7s; --b2: -2.3s; --b3: -3.8s; --b4: -1.2s; --b5: -4.5s; --b6: -0.3s; }
  .hourglass-wrapper:nth-child(3) { --b1: -1.5s; --b2: -3.2s; --b3: -0.8s; --b4: -2.7s; --b5: -1.1s; --b6: -4.0s; }
  .hourglass-wrapper:nth-child(4) { --b1: -2.2s; --b2: -0.5s; --b3: -3.5s; --b4: -1.8s; --b5: -2.9s; --b6: -0.9s; }

  .mystery-mode .mystery-bubbles span:nth-child(1) { animation-delay: var(--b1); }
  .mystery-mode .mystery-bubbles span:nth-child(2) { animation-delay: var(--b2); }
  .mystery-mode .mystery-bubbles span:nth-child(3) { animation-delay: var(--b3); }
  .mystery-mode .mystery-bubbles span:nth-child(4) { animation-delay: var(--b4); }
  .mystery-mode .mystery-bubbles span:nth-child(5) { animation-delay: var(--b5); }
  .mystery-mode .mystery-bubbles span:nth-child(6) { animation-delay: var(--b6); }

  @keyframes mysterySmoke {
    0%, 100% {
      opacity: 0.5;
      transform: translateY(0) scale(1);
      filter: blur(0px);
    }
    25% {
      opacity: 0.9;
      transform: translateY(-12px) scale(1.08);
      filter: blur(2px);
    }
    50% {
      opacity: 0.7;
      transform: translateY(-5px) scale(1.02);
      filter: blur(1px);
    }
    75% {
      opacity: 0.85;
      transform: translateY(8px) scale(0.96);
      filter: blur(3px);
    }
  }

  @keyframes mysterySmokeAlt {
    0%, 100% {
      opacity: 0.55;
      transform: translateY(0) scale(1) rotate(0deg);
    }
    30% {
      opacity: 0.95;
      transform: translateY(10px) scale(1.06) rotate(2deg);
    }
    60% {
      opacity: 0.65;
      transform: translateY(-8px) scale(0.97) rotate(-1deg);
    }
  }

  @keyframes mysteryGlow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.12); }
  }

  @keyframes mysteryPulse {
    0%, 100% { filter: brightness(1) drop-shadow(0 0 8px rgba(120, 80, 180, 0.4)); }
    50% { filter: brightness(1.1) drop-shadow(0 0 25px rgba(140, 100, 200, 0.6)); }
  }

  @keyframes riseBubble {
    0% { bottom: -10%; opacity: 0; }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% { bottom: 100%; opacity: 0; }
  }

  .mystery-banner {
    text-align: center;
    padding: 1.5rem 2rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, rgba(20, 10, 40, 0.8) 0%, rgba(10, 20, 40, 0.8) 100%);
    border: 1px solid rgba(150, 100, 200, 0.4);
    border-radius: 16px;
    box-shadow: 0 0 40px rgba(100, 50, 150, 0.3);
    animation: bannerPulse 3s ease-in-out infinite;
  }

  .mystery-banner h2 {
    font-family: 'Cinzel', serif;
    font-size: 1.4rem;
    color: #d4a5ff;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 20px rgba(200, 150, 255, 0.5);
  }

  .mystery-banner p {
    font-size: 1rem;
    color: var(--text-secondary);
  }

  @keyframes bannerPulse {
    0%, 100% { box-shadow: 0 0 30px rgba(100, 50, 150, 0.3); }
    50% { box-shadow: 0 0 50px rgba(100, 50, 150, 0.5); }
  }

  /* Section Headers */
  .section-title {
    font-family: 'Cinzel', serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Hourglass Container */
  .hourglasses-container {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 2rem;
    padding: 2rem 1rem 2rem;
    min-height: 520px;
  }

  /* Individual Hourglass Wrapper */
  .hourglass-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    animation: fadeSlideUp 0.6s ease-out both;
  }

  .hourglass-wrapper:nth-child(1) { animation-delay: 0.1s; --entry-delay: 0.1s; }
  .hourglass-wrapper:nth-child(2) { animation-delay: 0.2s; --entry-delay: 0.2s; }
  .hourglass-wrapper:nth-child(3) { animation-delay: 0.3s; --entry-delay: 0.3s; }
  .hourglass-wrapper:nth-child(4) { animation-delay: 0.4s; --entry-delay: 0.4s; }

  /* Ranking Badge */
  .rank-badge {
    font-family: 'Cinzel', serif;
    font-size: 1.1rem;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    background: linear-gradient(135deg, rgba(20, 20, 35, 0.9) 0%, rgba(30, 30, 50, 0.9) 100%);
    border: 2px solid var(--border-subtle);
    position: relative;
    transition: all 0.3s ease;
  }

  .rank-1 {
    color: #ffd700;
    border-color: rgba(255, 215, 0, 0.5);
    box-shadow: 0 0 25px rgba(255, 215, 0, 0.4), inset 0 0 20px rgba(255, 215, 0, 0.1);
    text-shadow: 0 0 15px rgba(255, 215, 0, 0.7);
  }

  .rank-2 {
    color: #e8e8e8;
    border-color: rgba(232, 232, 232, 0.4);
    box-shadow: 0 0 20px rgba(232, 232, 232, 0.25);
    text-shadow: 0 0 12px rgba(232, 232, 232, 0.5);
  }

  .rank-3 {
    color: #cd7f32;
    border-color: rgba(205, 127, 50, 0.4);
    box-shadow: 0 0 20px rgba(205, 127, 50, 0.3);
    text-shadow: 0 0 12px rgba(205, 127, 50, 0.5);
  }

  .rank-4 {
    color: var(--text-muted);
    border-color: var(--border-subtle);
  }

  /* Hourglass Container with Overlay */
  .hourglass-container {
    position: relative;
  }

  /* Hourglass Frame */
  .hourglass {
    position: relative;
    width: 120px;
    height: 420px;
  }

  /* Ornate top and bottom caps */
  .hourglass-cap {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 130px;
    height: 20px;
    background: linear-gradient(180deg,
      var(--frame-dark) 0%,
      var(--frame-mid) 20%,
      var(--frame-light) 40%,
      var(--frame-highlight) 50%,
      var(--frame-light) 60%,
      var(--frame-mid) 80%,
      var(--frame-dark) 100%
    );
    border-radius: 4px;
    z-index: 10;
    box-shadow:
      0 3px 10px rgba(0, 0, 0, 0.6),
      inset 0 2px 0 rgba(255, 255, 255, 0.2),
      inset 0 -2px 0 rgba(0, 0, 0, 0.3);
  }

  .hourglass-cap::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, transparent 0%, rgba(255,215,0,0.25) 50%, transparent 100%);
  }

  .hourglass-cap.top { top: 0; }
  .hourglass-cap.bottom { bottom: 0; }

  /* Central pillar connectors */
  .hourglass-pillar {
    position: absolute;
    width: 10px;
    height: 100%;
    background: linear-gradient(90deg,
      var(--frame-dark) 0%,
      var(--frame-mid) 30%,
      var(--frame-light) 50%,
      var(--frame-mid) 70%,
      var(--frame-dark) 100%
    );
    top: 0;
    z-index: 5;
    box-shadow: 2px 0 6px rgba(0, 0, 0, 0.4);
  }

  .hourglass-pillar.left { left: 8px; }
  .hourglass-pillar.right { right: 8px; }

  /* Glass bulb container */
  .hourglass-glass {
    position: absolute;
    top: 20px;
    bottom: 20px;
    left: 18px;
    right: 18px;
    overflow: hidden;
  }

  /* Upper and lower bulbs */
  .glass-bulb {
    position: absolute;
    left: 0;
    right: 0;
    background: rgba(10, 10, 18, 0.75);
    border: 2px solid rgba(255, 255, 255, 0.06);
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .glass-bulb.upper {
    top: 0;
    height: 22%;
    border-radius: 35px 35px 6px 6px;
    clip-path: polygon(
      0% 0%,
      100% 0%,
      100% 70%,
      65% 100%,
      35% 100%,
      0% 70%
    );
  }

  .glass-bulb.lower {
    bottom: 0;
    height: 72%;
    border-radius: 6px 6px 35px 35px;
    clip-path: polygon(
      35% 0%,
      65% 0%,
      100% 6%,
      100% 100%,
      0% 100%,
      0% 6%
    );
  }

  /* Glass shine effect & sand texture base */
  .glass-bulb::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 12px;
    width: 12px;
    height: 55%;
    background: linear-gradient(180deg, rgba(255,255,255,0.12) 0%, rgba(255,255,255,0.02) 100%);
    border-radius: 8px;
    z-index: 4;
  }

  .sand-fill,
  .sand-fill-upper {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    background-blend-mode: overlay;
  }

  /* Sand fill in upper bulb (depleting) */
  .sand-fill-upper {
    position: absolute;
    top: 4px;
    left: 4px;
    right: 4px;
    border-radius: 30px 30px 4px 4px;
    background-color: var(--house-color);
    transition: height 1.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow:
      inset 0 -6px 12px rgba(0, 0, 0, 0.3),
      inset 0 6px 12px rgba(255, 255, 255, 0.15);
  }

  /* Sand fill upper - flat bottom surface */
  .sand-fill-upper::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 8px;
    background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.25) 100%);
  }

  /* Sand fill lower */
  .sand-fill {
    position: absolute;
    bottom: 4px;
    left: 4px;
    right: 4px;
    border-radius: 4px 4px 30px 30px;
    background-color: var(--house-color);
    transition: height 1.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow:
      inset 0 6px 14px rgba(255, 255, 255, 0.2),
      inset 0 -6px 14px rgba(0, 0, 0, 0.25),
      0 0 20px var(--house-color-fade);
  }

  /* Sand fill lower - mounded top surface */
  .sand-fill::before {
    content: '';
    position: absolute;
    top: -4px;
    left: 10%;
    right: 10%;
    height: 10px;
    background: radial-gradient(ellipse 50% 100% at 50% 100%, var(--house-color-light) 0%, transparent 70%);
    border-radius: 50%;
  }

  /* Grain overlay */
  .sand-fill::after,
  .sand-fill-upper::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 20% 30%, rgba(255,255,255,0.3) 0.5px, transparent 0.5px),
      radial-gradient(circle at 60% 20%, rgba(255,255,255,0.25) 0.5px, transparent 0.5px),
      radial-gradient(circle at 80% 50%, rgba(255,255,255,0.2) 0.5px, transparent 0.5px),
      radial-gradient(circle at 40% 70%, rgba(255,255,255,0.25) 0.5px, transparent 0.5px),
      radial-gradient(circle at 15% 80%, rgba(255,255,255,0.2) 0.5px, transparent 0.5px),
      radial-gradient(circle at 70% 85%, rgba(255,255,255,0.22) 0.5px, transparent 0.5px),
      radial-gradient(circle at 90% 25%, rgba(255,255,255,0.18) 0.5px, transparent 0.5px),
      radial-gradient(circle at 30% 45%, rgba(0,0,0,0.15) 0.5px, transparent 0.5px),
      radial-gradient(circle at 55% 60%, rgba(0,0,0,0.12) 0.5px, transparent 0.5px),
      radial-gradient(circle at 85% 75%, rgba(0,0,0,0.1) 0.5px, transparent 0.5px);
    animation: shimmerGrain 4s ease-in-out infinite;
  }

  @keyframes shimmerGrain {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }

  /* Neck connector */
  .hourglass-neck {
    position: absolute;
    top: 25%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 24px;
    background: rgba(10, 10, 18, 0.85);
    border-left: 2px solid rgba(255, 255, 255, 0.05);
    border-right: 2px solid rgba(255, 255, 255, 0.05);
    z-index: 3;
  }

  .hourglass-neck::before,
  .hourglass-neck::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 34px;
    height: 8px;
    background: linear-gradient(180deg,
      var(--frame-dark) 0%,
      var(--frame-light) 50%,
      var(--frame-dark) 100%
    );
    border-radius: 2px;
  }

  .hourglass-neck::before { top: -4px; }
  .hourglass-neck::after { bottom: -4px; }

  /* House info overlay */
  .house-overlay {
    position: absolute;
    bottom: 60px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
    text-align: center;
    pointer-events: none;
  }

  .house-crest {
    width: 3.5rem;
    height: 3.5rem;
    margin: 0 auto 1rem;
    filter: drop-shadow(0 2px 8px rgba(0,0,0,0.8));
    object-fit: contain;
    display: block;
  }

  .house-points-overlay {
    font-family: 'Outfit', sans-serif;
    font-size: 1.6rem;
    font-weight: 700;
    color: #fff;
    text-shadow:
      0 0 15px var(--house-color),
      0 0 30px var(--house-color-fade),
      0 2px 4px rgba(0,0,0,0.9);
    line-height: 1.1;
    margin-top: 0.15rem;
  }

  .house-info {
    text-align: center;
    min-width: 110px;
  }

  .house-members {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  /* Hover effects */
  .hourglass-wrapper:hover .glass-bulb {
    border-color: var(--house-color);
    box-shadow: inset 0 0 25px var(--house-color-fade);
  }

  .hourglass-wrapper:hover .sand-fill {
    box-shadow:
      inset 0 6px 14px rgba(255, 255, 255, 0.25),
      inset 0 -6px 14px rgba(0, 0, 0, 0.25),
      0 0 35px var(--house-color-fade);
  }

  .hourglass-wrapper:hover .house-points-overlay {
    text-shadow:
      0 0 20px var(--house-color),
      0 0 40px var(--house-color),
      0 2px 4px rgba(0,0,0,0.9);
  }

  /* Unweighted Section */
  .unweighted-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
  }

  .unweighted-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .unweighted-card {
    background: linear-gradient(135deg, rgba(20, 20, 35, 0.6) 0%, rgba(30, 30, 50, 0.5) 100%);
    border: 1px solid var(--border-subtle);
    border-radius: 14px;
    padding: 1.25rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .unweighted-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--house-color);
    opacity: 0.7;
  }

  .unweighted-card:hover {
    background: linear-gradient(135deg, rgba(30, 30, 50, 0.7) 0%, rgba(40, 40, 60, 0.6) 100%);
    border-color: var(--house-color);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3), 0 0 20px var(--house-color-fade);
  }

  .unweighted-card:hover::before {
    opacity: 1;
    box-shadow: 0 0 15px var(--house-color);
  }

  .unweighted-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, var(--house-color-light) 0%, var(--house-color) 60%, var(--house-color-dark) 100%);
    box-shadow: 0 0 12px var(--house-color-fade);
    flex-shrink: 0;
  }

  .unweighted-info {
    flex: 1;
  }

  .unweighted-name {
    font-family: 'Cinzel', serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .unweighted-details {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-top: 0.2rem;
  }

  .unweighted-points {
    font-family: 'Outfit', sans-serif;
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-primary);
